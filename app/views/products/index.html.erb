<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Name</th>
      <th>Description</th>
      <th>Comentarios</th>
      <th>Price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
      <td><%= image_tag(product.picture, size:"256x256") %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.reviews.count %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) if can? :update, Product%></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, Product%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Product', new_product_path if can? :create, Product %>
